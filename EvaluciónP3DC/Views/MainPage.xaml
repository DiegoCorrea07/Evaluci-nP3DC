<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EvaluciónP3DC.MainPage"
             xmlns:local="clr-namespace:EvaluciónP3DC.ViewModels"
             Title="Países">

    <ContentPage.BindingContext>
        <local:CountryViewModel />
    </ContentPage.BindingContext>

    <StackLayout>
        <Button Text="Load Countries" Command="{Binding LoadCountriesCommand}" />
        <CollectionView ItemsSource="{Binding Countries}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="{Binding Name}" />
                        <Label Text="{Binding Code}" />
                        <Button Text="Update" Command="{Binding Source={RelativeSource AncestorType={x:Type local:CountryViewModel}}, Path=UpdateCountryCommand}" CommandParameter="{Binding .}" />
                        <Button Text="Delete" Command="{Binding Source={RelativeSource AncestorType={x:Type local:CountryViewModel}}, Path=DeleteCountryCommand}" CommandParameter="{Binding .}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>

</ContentPage>
